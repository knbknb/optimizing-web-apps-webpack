{
  "name": "solitaire",
  "private": true,
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.x",
    "@babel/core": "^7.x",
    "@babel/polyfill": "^7.x",
    "@babel/preset-env": "^7.x",
    "babel-loader": "^8.x",
    "bower": "^1.8.2",
    "clean-webpack-plugin": "^0.1.17",
    "eslint": "^5.8.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "http-server": "^0.11.1",
    "jasmine-core": "^2.8.0",
    "karma": "^1.7.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-firefox-launcher": "^1.1.0",
    "karma-jasmine": "^1.1.1",
    "karma-junit-reporter": "^1.2.0",
    "nodemon": "^1.14.11",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.11.0",
    "webpack-merge": "^4.1.4",
    "webpack-stats-graph": "^1.0.8"
  },
  "scripts": {
    "build": "webpack --env.NODE_ENV=development ",
    "watch": "webpack-dev-server  --open --env.NODE_ENV=development",
    "build:basic": "webpack app/app.js --verbose --output-filename app.bundle.js",
    "build:json": "webpack app/app.js --json --output-filename app.bundle.js > stats.json",
    "build:statsgraph": "webpack-stats-graph --show-sources --show-size --color-by-size",
    "start": "nodemon -w webpack.config.js -x webpack-dev-server -- --open --env.NODE_ENV=development  ",
    "start:prod": "nodemon -w webpack.config.js -x webpack-dev-server -- --open --env.NODE_ENV=production  ",
    "start:dev:basic": "webpack-dev-server --config webpack.config.mini.js  ",
    "start:basic": "http-server -c-1 -o",
    "postinstall": "node node_modules/bower/bin/bower install",
    "pretest": "npm install",
    "test": "karma start karma.conf.js",
    "test-single-run": "karma start karma.conf.js --single-run"
  }
}
